<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hmade.cesilia.myapplication.TasKopi6"
    android:background="#ffffff">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView17">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:id="@+id/imageView43"
                android:layout_marginTop="75dp"
                android:src="@drawable/images"
                android:layout_below="@+id/imageView42"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mudah bukan! Cara yang sama juga bisa Anda lakukan untuk tas yang berukuran lebih besar atau bentuk yang lain. Selamat berkreasi!"
                android:id="@+id/textView35"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_below="@+id/imageView43"
                android:layout_centerHorizontal="true" />
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/button32"
                android:text="Selesai"
                android:textSize="18sp"
                android:layout_marginTop="35dp"
                android:textColor="#ffffff"
                android:background="#F89406"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
